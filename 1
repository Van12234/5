>>> from random import randint
>>> a_list = [[randint(1,20) for e in range(6)] for _ in range(6)]
>>> a_list
[[20, 4, 13, 15, 13, 4], [10, 11, 1, 1, 3, 15], [13, 17, 14, 15, 5, 15], [15, 1, 3, 11, 18, 14], [7, 2, 12, 6, 4, 1], [11, 20, 9, 6, 17, 8]]
>>> for index, inner in enumerate(a_list):
...     inner.sort(reverse=(index%2==0))
... 
>>> a_list
[[20, 15, 13, 13, 4, 4], [1, 1, 3, 10, 11, 15], [17, 15, 15, 14, 13, 5], [1, 3, 11, 14, 15, 18], [12, 7, 6, 4, 2, 1], [6, 8, 9, 11, 17, 20]]
